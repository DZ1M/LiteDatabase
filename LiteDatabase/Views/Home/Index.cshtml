@model IEnumerable<LiteDatabase.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

    <form action="@Url.Action("Cadastrar","Home")" method="post">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Nome</label>
                    <input name="Nome" class="form-control" required />
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Senha</label>
                    <input name="Senha" type="password" class="form-control" required />
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <button id="btn-submit" class="btn btn-success btn-block" type="submit">Salvar</button>
                </div>
            </div>
        </div>
    </form>
@if (TempData["Msg"] != null)
{
<div class="alert alert-primary" role="alert">
    @TempData["Msg"]
</div>
}
<h1>Listagem de dados</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
