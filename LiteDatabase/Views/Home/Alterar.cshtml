@model LiteDatabase.Models.Usuario

@{
    ViewData["Title"] = "Alterar";
}

<h1>Alterar Usuário</h1>
<form asp-action="Alterar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input name="@Model.Id" type="hidden" />
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input name="Nome" value="@Model.Nome" class="form-control" required />
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <label class="control-label">Senha</label>
                <input name="Senha" value="@Model.Senha" type="password" class="form-control" required />
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                <button id="btn-submit" class="btn btn-success btn-block" type="submit">Salvar</button>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
